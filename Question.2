
#include <stdio.h>
#include<string.h>

int main()
{
    int vowel[5]={0}; 
    // the vowels are 5 that's why the size of the array is taken 5
      /*  vowel[0]='a'
        vowel[1]='e'
        vowel[2]='i'
        vowel[3]='o'
        vowel[4]='u'*/
    char str[100];
    
    printf("Enter any sentence : ");
    gets(str);  //we use gets because scanf doesn't count spaces

    for (int i=0;i<strlen(str);i++)    //strlen is used to find the length of the given string that's why we have to use the header file of the  string
    {
       if (str[i]=='a')     //if in the sentence have A character
       {
         vowel[0]++;    
       }
       else if (str[i]=='e')
       {
           vowel[1]++;  
       }
