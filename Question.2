    {
     printf("i:%d\n",vowel[2]);   
    }
   
   if (vowel[3]>0)   // if anything stored in the vowel[0]=a then it will be greater than zero
    {
     printf("o:%d\n",vowel[3]);   
    }
  
  if (vowel[4]>0)   // if anything stored in the vowel[0]=a then it will be greater than zero
    {
     printf("u:%d",vowel[4]);   
    }
   
    

    return 0;
}
