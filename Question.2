       {
           vowel[3]++;  
       }
       else if (str[i]=='u')
       {
           vowel[4]++;  
       }
    }
    
    //now we printf the vowels that how many time they repeated
    
    if (vowel[0]>0)   // if anything stored in the vowel[0]=a then it will be greater than zero
    {
     printf("a:%d\n",vowel[0]);   
    }
   
   //this method we use for every vowels

    if (vowel[1]>0)   // if anything stored in the vowel[0]=a then it will be greater than zero
